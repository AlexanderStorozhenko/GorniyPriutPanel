<Page x:Class="GorniyPriutPanel.StatusBar"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:GorniyPriutPanel"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="StatusBar">

    <StackPanel>
        <ProgressBar Margin="5px" VerticalAlignment="Bottom" HorizontalAlignment="Right"
                         x:Name="progress_bar" Width="150px" Height="21px" 
                         IsIndeterminate="True" Visibility="Visible"></ProgressBar>
    </StackPanel>
</Page>
