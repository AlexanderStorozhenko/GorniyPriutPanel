<Page x:Class="GorniyPriutPanel.Text"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:GorniyPriutPanel"
      mc:Ignorable="d" 
      d:DesignHeight="550" d:DesignWidth="800"
      Title="Text">
    <Page.Resources>
        <ResourceDictionary Source="SubmitButtonStyle.xaml"/>
    </Page.Resources>
        <GroupBox Header="Описание" Margin="0 10px" Padding=" 5" Grid.Row="0" Grid.Column="0" Height="340px" Width="420px" VerticalAlignment="Center" HorizontalAlignment="Center">
            <StackPanel Orientation="Vertical">
                <TextBox x:Name="text" Height="270px"></TextBox>
                <StackPanel Height="35px">
                    <Button Margin="0 10px" Style="{StaticResource SameBackgroundButton}" HorizontalAlignment="Right" Width="80px" Height="25" FontFamily="Arial Unicode MS" Foreground="#FFFFF6F6" Click="ChangeText_Click">Изменить</Button>
                </StackPanel>
            </StackPanel>
        </GroupBox>
        

  </Page>
